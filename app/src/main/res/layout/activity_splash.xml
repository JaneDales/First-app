<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/yacht_home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_wave"
        app:tint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@id/txtAnaliytics"
        app:layout_constraintRight_toLeftOf="@id/txtSailsense"
        tools:background="@color/transparent" />

    <TextView
        android:id="@+id/txtSailsense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginRight="85dp"
        android:text="SAILSENSE"
        android:textColor="@color/purple_500"
        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAnaliytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANALYTICS"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/txtSailsense"
        app:layout_constraintLeft_toLeftOf="@id/txtSailsense"
        />
</androidx.constraintlayout.widget.ConstraintLayout>